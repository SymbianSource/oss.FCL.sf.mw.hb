<layers>
	<visual src="Item">
		<param name="translation_x" type="anim">
			<duration>0.3</duration>
			<style>inquad</style>
			<keyframe at="0.0">0.0</keyframe>
			<keyframe at="1.0">1.0</keyframe>
			<start ref="visual.left">1.0</start>
			<end ref="screen.width">0.5</end>
		</param>
		<param name="translation_y" type="anim">
			<duration>0.3</duration>
			<style>inquad</style>
			<keyframe at="0.0">0.0</keyframe>
			<keyframe at="1.0">0.9</keyframe>
			<start ref="visual.top">1.0</start>
			<end ref="screen.bottom">1.0</end>
		</param>
		<param name="scale_x" type="anim">
			<duration>0.3</duration>
			<style>inquad</style>
			<keyframe at="0.0">0</keyframe>
			<keyframe at="1.0">1</keyframe>
			<start ref="visual.width">1.1</start>
			<end ref="visual.width">0.3</end>
		</param>
		<param name="scale_y" type="anim">
			<duration>0.3</duration>
			<style>inquad</style>
			<keyframe at="0.0">0</keyframe>
			<keyframe at="1.0">1</keyframe>
			<start ref="visual.height">1.1</start>
			<end ref="visual.height">0.3</end>
		</param>
		<param name="opacity" type="anim">
			<style>linear</style>
			<duration>0.3</duration>
			<keyframe at="0.0">1.0</keyframe>
			<keyframe at="0.8">1.0</keyframe>
			<keyframe at="1.0">0.0</keyframe>
		</param>
		<param name="scale_origin_x" ref="visual.width">0.0</param>
		<param name="scale_origin_y" ref="visual.height">1.0</param>
	</visual>
	<filter name="drop_shadow" type="drop_shadow">
		<param name="offset_x">2</param>
		<param name="offset_y">3</param>
		<param name="opacity" type="anim">
			<style>linear</style>
			<duration>0.3</duration>
			<keyframe at="0.0">0.7</keyframe>
			<keyframe at="0.8">0.7</keyframe>
			<keyframe at="1.0">0.0</keyframe>
		</param>
		<param name="steepness">8.0</param>
		<param name="outline_x">4.0</param>
		<param name="outline_y">4.0</param>
		<param name="color">#000000</param>
	</filter>
</layers>
